canvas|z17 {
    water-max-area: 5;
    water-color-noise-freq: 0.1;
    water-ele-noise-freq: 0.05;
    water-color: gradient(#72e4de);
    water-height:-1;
}

area|z17[natural=water],
area|z17[landuse=basin],
area|z17[waterway=riverbank],
area|z17[waterway=dock] {
    clip:true;
    builders: terrain;
    terrain-layer: water;
}
