canvas|z19 {
    drive-max-area: 5;
    drive-color-noise-freq: 0.1;
    drive-ele-noise-freq: 0;
    drive-color: gradient(#72e4de);
    drive-height:-0.2;

    pedestrian-max-area: 5;
    pedestrian-color-noise-freq: 0.1;
    pedestrian-ele-noise-freq: 0.05;
    pedestrian-color: gradient(#72e4de);
}

way|z19[highway] {
    builders: terrain;
    terrain-layer: pedestrian;
    width: 2;
}

way|z19[highway=path][foot=designated] {
    terrain-layer: pedestrian;
    width: 2;
}
way|z19[highway=service] {
    terrain-layer: pedestrian;
    width: 1.5;
}
way|z19[highway=footway] {
    terrain-layer: pedestrian;
    width: 2;
}

way|z19[highway=tertiary],
way|z19[highway=residential],
way|z19[highway=service],
way|z19[highway=unclassified],
way|z19[highway=road] {
    terrain-layer: drive;
    width: 9;
}
way|z19[highway=living_street] {
    width: 8;
}
way|z19[highway=trunk],
way|z19[highway=trunk_link],
way|z19[highway=primary],
way|z19[highway=primary_link],
way|z19[highway=motorway],
way|z19[highway=motorway_link] {
    terrain-layer: drive;
    width: 8;
}
way|z19[highway=secondary],
way|z19[highway=secondary_link] {
    terrain-layer: drive;
    width: 7;
}
way|z19[highway=tertiary],
way|z19[highway=tertiary_link] {
    terrain-layer: drive;
    width: 8;
}
