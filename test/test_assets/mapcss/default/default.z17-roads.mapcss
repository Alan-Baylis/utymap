canvas|z17 {
    drive-max-area: 0.0005;
    drive-color-noise-freq: 0.1;
    drive-ele-noise-freq: 0;
    drive-color: gradient(#4d4d4d);
    drive-height:-0.2;

    pedestrian-max-area: 0.0005;
    pedestrian-color-noise-freq: 0.1;
    pedestrian-ele-noise-freq: 0.05;
    pedestrian-color: gradient(#636363);
}

way|z17[highway] {
    clip:true;
    builders: terrain;
    terrain-layer: pedestrian;
    width: 1;
}

way|z17[highway=path][foot=designated] {
    terrain-layer: pedestrian;
    width: 1;
}
way|z17[highway=service] {
    terrain-layer: pedestrian;
    width: 0.7;
}
way|z17[highway=footway] {
    terrain-layer: pedestrian;
    width: 1;
}

way|z17[highway=tertiary],
way|z17[highway=residential],
way|z17[highway=service],
way|z17[highway=unclassified],
way|z17[highway=road] {
    terrain-layer: drive;
    width: 4.5;
}
way|z17[highway=living_street] {
    width: 4;
}
way|z17[highway=trunk],
way|z17[highway=trunk_link],
way|z17[highway=primary],
way|z17[highway=primary_link],
way|z17[highway=motorway],
way|z17[highway=motorway_link] {
    terrain-layer: drive;
    width: 4;
}
way|z17[highway=secondary],
way|z17[highway=secondary_link] {
    terrain-layer: drive;
    width: 3.5;
}
way|z17[highway=tertiary],
way|z17[highway=tertiary_link] {
    terrain-layer: drive;
    width: 4;
}
