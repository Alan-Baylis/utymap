canvas|z1-23 {
    behaviours: terrain_draw;
    material: main;
    water-material: main;
    
    /* background layer. */
    background-color-noise-freq: 0.1;
    background-ele-noise-freq: 0.05;
    background-gradient: gradient(#dcdcdc 0%, #c0c0c0 10%, #a9a9a9 50%, #808080);
    background-texture: background;
    
    /* water layer. */
    water-color-noise-freq: 0.1;
    water-ele-noise-freq: 0.15;
    water-surface-level: 1;
    water-bottom-level: 3;
    water-gradient: gradient(#87cefa, #1e90ff);
    water-texture: water;

    /* car road layer. */
    car-color-noise-freq: 0.1;
    car-ele-noise-freq: 0.0;
    car-gradient: gradient(#4d4d4d, #404040);
    car-texture: asphalt;
    
    /* pedestrian road layer. */
    pedestrian-color-noise-freq: 0.1;
    pedestrian-ele-noise-freq: 0.1;
    pedestrian-gradient: gradient(#636363, #4d4d4d);
    pedestrian-texture: road_brick;
}

area|z1-23[featurecla=coastline] {
    material: main;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    gradient: gradient(#dcdcdc 0%, #c0c0c0 10%, #a9a9a9 50%, #808080);
    texture: background;
}