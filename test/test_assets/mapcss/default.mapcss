canvas|z1 {
    clip:true;
    builders: terrain;
    terrain-type: water;
    max-area: 5;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(#72e4de);
}

way|z1[featurecla=River][scalerank=2],
relation|z1[featurecla=River][scalerank=2] {
    clip:true;
    builders: terrain;
    terrain-type: water;
    max-area: 5;
    width: 0.2;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(blue);
}

area|z1[featurecla=Country][scalerank=1],
relation|z1[featurecla=Country][scalerank=1] {
    clip:true;
    builders: terrain;
    terrain-type: surface;
    max-area: 5;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(red);
}