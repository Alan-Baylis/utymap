canvas|z1 {
    clip:true;
    material: main;   
    texture: background;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(green);
}

area|z1[featurecla=Country][scalerank=1],
relation|z1[featurecla=Country][scalerank=1] {
    clip:true;
    builders: terrain;
    terrain-type: surface;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(red);
    texture: background;
}