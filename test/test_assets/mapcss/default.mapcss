    material: main;   
    texture: background;
    max-area: 10;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(#72e4de);
}

area|z1[featurecla=Country][scalerank=1],
relation|z1[featurecla=Country][scalerank=1] {
    clip:true;
    builders: terrain;
    terrain-type: surface;
    max-area: 10;
    color-noise-freq: 0.1;
    ele-noise-freq: 0.05;
    color: gradient(red);
    texture: background;
}