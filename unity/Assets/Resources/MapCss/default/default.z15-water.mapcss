canvas|z15 {
    water-max-area: 5%;
    water-color-noise-freq: 0.1;
    water-ele-noise-freq: 0.05;
    water-color: gradient(#72e4de);
    water-height:-1m;
}

area|z15[natural=water],
area|z15[landuse=basin],
area|z15[waterway=riverbank],
area|z15[waterway=dock] {
    clip:true;
    builders: terrain;
    terrain-layer: water;
}
